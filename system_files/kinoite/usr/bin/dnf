#!/usr/bin/bash

# Redirect to dnf5 if we are running inside a container
if systemd-detect-virt -cq || { [[ -e /run/.containerenv || -e /.dockerenv ]]; }; then
  exec dnf5 "$@"
fi

echo -e "ERROR: Hello stargazers looks like you are trying to use DNF on Aurora, please \e]8;;https://docs.getaurora.dev/guides/software/\aread our documentation here\e]8;;\a\n\e]8;;https://docs.getaurora.dev/guides/software/\ahttps://docs.getaurora.dev/guides/software/\e]8;;\a\n"
exit 1

